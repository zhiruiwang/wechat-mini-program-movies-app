/* pages/detail/detail.wxss */
page {
  background-color: #ececee;
}

.movie-card {
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 2;
  left: 0; 
  right: 0; 
}

.movie-pic {
  margin: 32rpx 52rpx 20rpx;
  width: 200rpx;
  height: 280rpx;
}
.movie-name {
  margin: 10rpx 21rpx 20rpx;
  font-size: 32rpx;
  line-height: 45rpx;
  font-weight: bold;
} 

.description {
  position: absolute;
  display: flex;
  flex-direction: column;
  top: 100rpx;
  background-color: #FFFFFF;
  border: 1px solid #ccc;
  border-radius: 10rpx;
  margin: 0rpx 50rpx;
  height: 1000rpx;
  z-index: 1;
  left: 0; 
  right: 0; 
}

.description-text {
  position: absolute;
  top: 320rpx;
  left: 80rpx; 
  right: 80rpx; 
  font-size: 30rpx;
  opacity: 0.8;
}

.button {
  position: absolute;
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 60rpx;
  top: 1200rpx;
}

.see-button,.add-button {
  display: flex;
  flex-direction: row;
  background: #FFFFFF;
  width: 100%;
  align-items: center;
  justify-content: center;
  border: 1px solid #ccc;
}

.see-button {
  margin-right: 100rpx;
}

.see-pic,.add-pic {
  margin: 0 20rpx;
  width: 44rpx;
  height: 44rpx;
}

.see-text,.add-text {
  font-size: 32rpx;
  line-height: 44rpx;
  color: #808080;
}