/* pages/home/home.wxss */
page {
  background-color: #ececee;
}
/* 推荐电影 */
.recommend-card{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.recommend-pic {
  margin: 32rpx 52rpx 20rpx;
  width: 540rpx;
  height: 756rpx;
}
.recommend-name {
  margin: 10rpx 21rpx 20rpx;
  font-size: 42rpx;
  line-height: 60rpx;
} 
/* 推荐来源 */
.comment {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.comment-avatar {
  flex-shrink: 0;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.comment-text {
  margin: 20rpx 20rpx;
  font-size: 28rpx;
  color: #34373D;
  opacity: 0.9; 
}
/* 下方两个按钮 */
.button {
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  border-top: 1px solid #ccc
}

.hot-button,.user-button {
  display: flex;
  flex-direction: row;
  background: #FFFFFF;
  width: 100%;
  align-items: center;
  justify-content: center;
  border-left: 1px solid #ccc;
}

.hot-pic,.user-pic {
  margin: 0 20rpx;
  width: 44rpx;
  height: 44rpx;
}

.hot-text,.user-text {
  font-size: 32rpx;
  line-height: 44rpx;
  color: #808080;
}