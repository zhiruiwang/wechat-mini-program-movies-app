/* pages/user/user.wxss */
page {
  background-color: #ececee;
}
.user-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  height: 200rpx;
}

.user-head {
  flex-shrink: 0;
  margin-left: 53rpx;
  height: 100rpx;
  width: 100rpx;
  background: #F5E069;
  border-radius: 50%;
  align-items: center;
  justify-content: center;
}
/* 标题 */
.title{
  margin: 100rpx 40rpx;
  text-align: center;
  color: orange;
  font-size: 32rpx;
  line-height: 45rpx;
}
/* 电影卡 */
.movie-card {
  margin: 40rpx 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #FFFFFF;
}

.movie-image {
  width: 270rpx;
  height: 378rpx;
}

.text-card {
  display: flex;
  flex-direction: column;
  margin: 40rpx 40rpx;
}

.movie-name {
  font-weight: bold;
  font-size: 32rpx;
  line-height: 45rpx;
  margin-bottom: 10rpx;
}

.comment-content {
  font-size: 30rpx;
  line-height: 42rpx;
}

.recording {
  position: relative;
  background-color: lightgrey;
  height: 50rpx;
  width: 250rpx;
  border-radius: 5rpx;
  border: 1px solid gray
}

.play{
  position: absolute;
  top: 5rpx;
  flex-shrink: 0;
  width: 40rpx;
  height: 40rpx;
  align-items: left;
  margin-left: 30rpx;
}

.duration {
  position: absolute;
  top: 5rpx;
  left: 80rpx;
  font-size: 30rpx;
  line-height: 42rpx;
}

.comment-top {
  display: flex;
  flex-direction: row; 
  margin-top: 10rpx;
}

.comment-avatar {
  flex-shrink: 0;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.comment-username {
  font-size: 28rpx;
  line-height: 40rpx;
  opacity: 0.8;
  margin-left: 10rpx;
}

/* 下方按钮 */
.back-home {
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  background: #FFFFFF;
  align-items: center;
  justify-content: center;
  border-top: 1px solid #ccc
}

.home-text {
  font-size: 32rpx;
  line-height: 44rpx;
  color: #808080;
}