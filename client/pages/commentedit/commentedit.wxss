/* pages/commentedit/commentedit.wxss */
page {
  background-color: #ececee;
}

.movie-card {
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 2;
  left: 0; 
  right: 0; 
}

.movie-pic {
  margin: 32rpx 52rpx 20rpx;
  width: 200rpx;
  height: 280rpx;
}
.movie-name {
  margin: 10rpx 21rpx 20rpx;
  font-size: 32rpx;
  line-height: 45rpx;
  font-weight: bold;
} 

.background {
  position: absolute;
  display: flex;
  flex-direction: column;
  top: 100rpx;
  background-color: #FFFFFF;
  border: 1px solid #ccc;
  border-radius: 10rpx;
  margin-left: 40rpx;
  height: 500rpx;
  z-index: 1;
  left: 0;
  right: 0; 
  padding-top: 300rpx;
  padding-bottom: 150rpx;
  width: 90%;
}

.comment-ipt {
  width: 100%;
  height: 400rpx;
  padding: 29rpx 34rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 40rpx;
}

.comment-placeholder {
  color: rgba(29, 29, 38, 0.4);
}

.button {
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  top: 850rpx;
  z-index: 2;
}

.record-button {
  display: flex;
  flex-direction: row;
  background: #FFFFFF;
  width: 30%;
  align-items: center;
  justify-content: center;
  border: 1px solid #ccc;
  border-radius: 10rpx;
  margin: 0 100rpx;
  height: 80rpx;
}

.record-pic {
  margin: 0 20rpx;
  width: 44rpx;
  height: 44rpx;
}

.record-text {
  font-size: 32rpx;
  line-height: 44rpx;
  color: #808080;
}

.finish {
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background: #FFFFFF;
  align-items: center;
  justify-content: center;
  background-color: #09BA07;
}

.finish-text {
  font-size: 32rpx;
  line-height: 44rpx;
  color: #FFFFFF;
}